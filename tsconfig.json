{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"],
		  "@script-nodes": ["./src/script-nodes"],
		  "@script-nodes-ts": ["./src/script-nodes-basic-ts"],
		  "~scenes": ["./src/scenes"],
		},
        "outDir": "./dist",
		"types": [
			"phaser"
		]
    },
    "include": [
        "src"
    ]
}